<?xml version="1.0" encoding="utf-8"?>
<com.chhd.superlayout.SuperLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"

    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    app:clip_background="true"
    app:round_corner_top_left="8dp"
    app:round_corner_top_right="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="查找当天快讯"
        android:textColor="#666"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/wheel_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.chhd.superlayout.SuperTextView
            android:id="@+id/tv_cancel"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="回到今天"
            android:textColor="#5A82E6"
            app:clip_background="true"
            app:round_corner="20dp"
            app:stroke_color="#5A82E6"
            app:stroke_width="1dp" />

        <com.chhd.superlayout.SuperTextView
            android:id="@+id/tv_confirm"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:background="#5A82E6"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white"
            app:clip_background="true"
            app:round_corner="20dp" />
    </LinearLayout>
</com.chhd.superlayout.SuperLinearLayout>